{
  "compilerOptions": {
    "target": "es5",
    "module": "none",
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
